{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@theme/*": ["./src/theme/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*", "config/*"],
  "exclude": ["src/scripts/sitemap.js"]
}
